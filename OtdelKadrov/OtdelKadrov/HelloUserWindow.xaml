<Page x:Class="OtdelKadrov.HelloUserWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OtdelKadrov"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelloUserWindow">

    <Grid>
        <StackPanel>
            <Button HorizontalAlignment="Center" FontSize="36" Width="220" Content="Вход" Margin="0,100,0,0" Name="btnSignIn" Click="btnSignIn_Click">
            </Button>
            <Button Content="Регистрация" FontSize="36" Width="220" HorizontalAlignment="Center" Margin="0,20,0,0" Name="btnSignUp" Click="btnSignUp_Click">
            </Button>
            <Button Content="Выход" FontSize="36" Width="220" HorizontalAlignment="Center" Margin="0,80,0,0" Name="btnExit" Click="btnExit_Click">
            </Button>
        </StackPanel>
    </Grid>
</Page>
